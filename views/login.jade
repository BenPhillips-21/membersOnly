extends layout

block content

    h1='Log In'

        form(method='POST')
            div.form-group
            label(for='username') Username:
            input#username.form-control(type='text', placeholder="Username" name='username' required )
            br
            label(for='password') Password:
            input#password.form-control(type='text', placeholder="Password" name='password' )
            br
            button.btn.btn-primary(type='submit') Submit

        if errors
            ul
            for error in errors
                li!= error.msg